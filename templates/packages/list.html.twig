{% extends 'base.html.twig' %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Registered packages</h3>
            <div class="box-tools pull-right">
                <form>
                <div class="input-group input-group-sm" style="width: 15vw">
                    <input class="form-control" type="search" name="search" placeholder="Filter...">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                    </div>
                </div>
                </form>
            </div>
        </div>
        <div class="box-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                {% for package in packages %}
                    <tr>
                        <td>
                            <a href="{{ path('package_view', {id: package.id}) }}">{{ package.name }}</a>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            {{ knp_pagination_render(packages, 'pagination_box_footer.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}

